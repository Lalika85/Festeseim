rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for Client Quote View
    match /users/{userId}/quotes/{quoteId} {
      allow read: if true;
      allow update: if true 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'viewedAt', 'acceptedAt', 'signatureUrl']);
    }

    match /users/{userId}/settings/branding {
      allow read: if true;
    }

    match /users/{userId}/settings/profile {
      allow read: if true;
    }

    match /users/{userId}/companies/{companyId} {
      allow read: if true;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
